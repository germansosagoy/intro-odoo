<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="libros_view_form" model="ir.ui.view">
            <field name="name">libros_view_form</field>
            <field name="model">libreria.libros</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <h1>
                            <label for="name"/>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="genero"/>
                            </group>
                            <group>
                                <field name="autor"/>
                                <field name="foto"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="libros_action" model="ir.actions.act_window">
            <field name="name">libros</field>
            <field name="res_model">libreria.libros</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Mi Libreria" id="libreria_menu"/>
        <menuitem name="Libros" id="libros_menu" action="libros_action" parent="libreria_menu"/>
    </data>
</odoo>