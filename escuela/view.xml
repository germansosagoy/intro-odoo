<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_profesor_tree" model="ir.ui.view">
            <field name="name">profesor.profesor.tree</field>
            <field name="model">profesor.profesor</field>
            <field name="arch" type="xml">
                <tree string="Profesor">
                    <field name="Nombre" />
                    <field name="primer_apellido" />
                    <field name="edad"></field>
                    <field name="fecha_nac"></field>
                    <field name="genero"></field>
                </tree>
            </field>
        </record>

        <record id="view_profesor_form" model="ir.ui.view">
            <field name="name">profesor.profesor.form</field>
            <field name="model">profesor.profesor</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml"></field>
        </record>

        <record model="ir.actions.view_window" id="action_view_asignaturas">
            <field name="name">Asignaturas</field>
            <field name="res_model">asignatura.asignaturas</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree, form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear una nueva asignatura</p>
            </field>
        </record>
    </data>
</odoo>